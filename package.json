{
  "name": "vacation-price-tracker",
  "private": true,
  "packageManager": "pnpm@9.12.1",
  "scripts": {
    "verify": "./scripts/verify.sh",
    "verify:deps": "pnpm install --frozen-lockfile && uv sync --extra dev",
    "verify:web": "pnpm web:validate && pnpm web:typecheck && pnpm web:test:coverage",
    "verify:audit": "pnpm audit --prod",
    "verify:py": "pnpm verify:py:lint && pnpm verify:py:test:api && pnpm verify:py:test:worker && pnpm verify:py:audit",
    "verify:py:lint": "uv run ruff check apps/api apps/worker",
    "verify:py:test:api": "uv run pytest apps/api/tests -v --cov=app --cov-fail-under=95 --cov-report=xml:apps/api/coverage.xml",
    "verify:py:test:worker": "uv run pytest apps/worker/tests -v --cov=worker --cov-fail-under=95 --cov-report=xml:apps/worker/coverage.xml",
    "verify:py:audit": "uv run pip-audit --ignore-vuln CVE-2024-23342",
    "sonar": "sonar-scanner",
    "web:validate": "pnpm web:build && pnpm web:lint",
    "web:validate:all": "pnpm validate:web && pnpm sonar",
    "web:dev": "pnpm --filter vacation-price-tracker-web dev",
    "web:dev:http": "pnpm --filter vacation-price-tracker-web dev:http",
    "web:build": "pnpm --filter vacation-price-tracker-web build",
    "web:start": "pnpm --filter vacation-price-tracker-web start",
    "web:lint": "pnpm --filter vacation-price-tracker-web lint",
    "web:format": "pnpm --filter vacation-price-tracker-web format",
    "web:typecheck": "pnpm --filter vacation-price-tracker-web typecheck",
    "web:test": "pnpm --filter vacation-price-tracker-web test",
    "web:test:coverage": "pnpm --filter vacation-price-tracker-web test:coverage",
    "web:test:watch": "pnpm --filter vacation-price-tracker-web test:watch",
    "web:audit": "pnpm --filter vacation-price-tracker-web audit",
    "api:dev": "cd apps/api && uv run python run_ssl.py",
    "api:dev:http": "cd apps/api && uv run uvicorn app.main:app --reload --port 8000",
    "api:lint": "uv run ruff check apps/api/app/ apps/api/tests/",
    "api:format": "uv run ruff format apps/api/app/ apps/api/tests/",
    "api:test": "uv run pytest apps/api/tests/ -v",
    "api:test:coverage": "uv run pytest apps/api/tests/ --cov=app --cov-report=html",
    "worker:start": "cd apps/worker && uv run python -m worker",
    "worker:dev": "cd apps/worker && uv run python -m worker",
    "worker:test": "uv run pytest apps/worker/tests -v",
    "worker:test:coverage": "uv run pytest apps/worker/tests -v --cov=worker --cov-fail-under=95 --cov-report=html",
    "db:migrate": "DATABASE_URL='postgresql+asyncpg://postgres:postgres@localhost:5432/vacation_tracker' uv run alembic upgrade head",
    "db:migrate:status": "DATABASE_URL='postgresql+asyncpg://postgres:postgres@localhost:5432/vacation_tracker' uv run alembic current",
    "db:migrate:new": "DATABASE_URL='postgresql+asyncpg://postgres:postgres@localhost:5432/vacation_tracker' uv run alembic revision --autogenerate -m"
  },
  "devDependencies": {
    "shadcn": "^3.6.3",
    "sonarqube-scanner": "^4.0.1"
  }
}
