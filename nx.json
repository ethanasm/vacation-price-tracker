{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/*.test.ts",
      "!{projectRoot}/**/*.test.tsx",
      "!{projectRoot}/**/test_*.py",
      "!{projectRoot}/tests/**/*"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/pyproject.toml",
      "{workspaceRoot}/pnpm-lock.yaml",
      "{workspaceRoot}/uv.lock"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "test": {
      "cache": true
    },
    "typecheck": {
      "cache": true
    }
  },
  "plugins": [
    "@nx/next/plugin",
    {
      "plugin": "@nxlv/python",
      "options": {
        "packageManager": "uv"
      }
    }
  ],
  "parallel": 3,
  "cacheDirectory": ".nx/cache"
}
